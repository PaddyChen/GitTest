<h1>Listing products</h1>
<p id="notice"><%= flash[:notice] %></p>
<table>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list-line-odd','list-line-even') %>">
          <td><%= image_tag product.img_url,:class=>"list-image" %> </td>
          <td class="list-description"> 
            <dl>
              <dt> <%= product.title %> </dt>
              <dd><%= truncate(product.description.gsub(/<.*?>/,''),:length=>80) %> </dd>
            </dl>
          </td>
          <td lass="list-actions">
            <%= link_to 'Show',product_path(product) %> <br/>
            <%= link_to 'Edit',edit_product_path(product) %> <br/>
            <%= link_to 'Destroy',product_path(product),method: :delete ,data:{confirm: 'Are you sure?'} %>
          </td>
      </tr>
    <% end %>
</table>

